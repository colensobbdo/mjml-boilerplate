{% extends "default.mjml" %}
{% block title %}{{ title }}{% endblock %}

{% block content %}
  {{ header.header(href='http://www.example.com') }}
  <mj-section background-color="#ffffff">
    <mj-column mj-class="tiles-cell">
      <mj-text align="center" font-size="30px" font-weight="bold">
        {{ title }}
      </mj-text>
      {{ image.image(src='assets/example-image.png') }}
    </mj-column>
  </mj-section>
  <mj-wrapper>
  <mj-section>
    <mj-column>
      {{ feature.title(content='Non id ex cupidatat in esse sint.') }}
